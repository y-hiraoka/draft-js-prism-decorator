{
  "name": "draft-js-prism-decorator",
  "version": "0.0.1",
  "description": "Draft.js decorator for syntax highlighting with Prism.js.",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "module": "dist/index.module.js",
  "unpkg": "dist/index.umd.js",
  "source": "src/index.tsx",
  "scripts": {
    "build": "rimraf dist && microbundle --no-compress --globals react=React,prism=Prism --strict --jsx React.createElement -f es,cjs,umd",
    "format": "prettier --write '**/*.{jsx,js,tsx,ts,json}'",
    "test": "jest",
    "prepare": "husky install"
  },
  "keywords": [
    "react",
    "draft-js",
    "draft",
    "prism-js",
    "prism"
  ],
  "files": [
    "dist",
    "src"
  ],
  "author": "https://github.com/y-hiraoka",
  "repository": {
    "url": "https://github.com/y-hiraoka/draft-js-prism-decorator"
  },
  "license": "MIT",
  "devDependencies": {
    "@testing-library/react": "^11.2.7",
    "@types/draft-js": "^0.11.3",
    "@types/jest": "^26.0.23",
    "@types/prismjs": "^1.16.5",
    "@types/react": "^17.0.6",
    "@types/react-dom": "^17.0.5",
    "draft-js": "^0.11.7",
    "husky": "^6.0.0",
    "jest": "^26.6.3",
    "lint-staged": "^11.0.0",
    "microbundle": "^0.13.0",
    "prettier": "^2.3.0",
    "prismjs": "^1.23.0",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "rimraf": "^3.0.2",
    "ts-jest": "^26.5.6",
    "typescript": "^4.2.4"
  },
  "peerDependencies": {
    "react": ">=16.8.0",
    "draft-js": ">=0.11.7",
    "prismjs": ">=1.23.0"
  },
  "peerDependenciesMeta": {
    "@types/react": {
      "optional": true
    },
    "@types/draft-js": {
      "optional": true
    },
    "@types/prismjs": {
      "optional": true
    }
  },
  "lint-staged": {
    "*.{jsx,js,tsx,ts,json}": "prettier --write"
  }
}
